@model IEnumerable<CRUD.Models.StaffInfo>
@if(Model.Count()>0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StaffPin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenderName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StaffPin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StaffName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GenderName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.ActionLink("Select", "Index", new { id = item.StaffPin }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.StaffPin })
                </td>
            </tr>
        }

    </table>
}

